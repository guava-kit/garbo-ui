---
import { CodeExample } from '../../components/code-example'
import { GButton } from '@lingjhf/guava'

const code = `
<GButton variant="text">Button</GButton>
<GButton type="primary" variant="text">Button</GButton>
<GButton type="success" variant="text">Button</GButton>
<GButton type="warn" variant="text">Button</GButton>
<GButton type="danger" variant="text">Button</GButton>
`
---

<CodeExample client:only="solid-js" code={code} language="html">
  <GButton client:only="solid-js" variant="text">Button</GButton>
  <GButton client:only="solid-js" type="primary" variant="text">Button</GButton>
  <GButton client:only="solid-js" type="success" variant="text">Button</GButton>
  <GButton client:only="solid-js" type="warn" variant="text">Button</GButton>
  <GButton client:only="solid-js" type="danger" variant="text">Button</GButton>
</CodeExample>
