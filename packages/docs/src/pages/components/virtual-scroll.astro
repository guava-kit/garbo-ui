---
import DocLayout from '../../layouts/DocLayout.astro'
import { VirtualScrollBaseUsage } from '../../example/virtual-scroll/virtual-scroll-base-usage'
import { VirtualScrollHorizontalUsage } from '../../example/virtual-scroll/virtual-scroll-horizontal-usage'
import { VirtualScrollMultipleListUsage } from '../../example/virtual-scroll/virtual-scroll-multiple-list-usage'
import { VirtualScrollMillionUsage } from '../../example/virtual-scroll/virtual-scroll-million-usage'
import { Anchor } from '../../components/anchor'
---

<DocLayout>
  <h1>Virtual scroll</h1>

  <h2><Anchor name="base" client:load /><span class="ml-1">基础用法</span></h2>
  <div style="height:398px">
    <VirtualScrollBaseUsage client:only="solid-js" />
  </div>
  <h2><Anchor name="horizontal" client:load /><span class="ml-1">水平虚拟滚动</span></h2>
  <div style="height:138px">
    <VirtualScrollHorizontalUsage client:only="solid-js" />
  </div>
  <h2><Anchor name="multiple" client:load /><span class="ml-1">多个虚拟列表</span></h2>
  <div style="height:398px">
    <VirtualScrollMultipleListUsage client:only="solid-js" />
  </div>
  <h2><Anchor name="million" client:load /><span class="ml-1">百万数据</span></h2>
  <div style="height:398px">
    <VirtualScrollMillionUsage client:only="solid-js" />
  </div>
</DocLayout>
