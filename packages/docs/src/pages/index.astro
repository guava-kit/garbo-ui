---
import BaseLayout from '../layouts/BaseLayout.astro'
import { GButton } from '@lingjhf/guava'
import './index.css'

const pageTitle = 'Guava'
---

<BaseLayout pageTitle={pageTitle}>
  <div class="lg:pt-144px lg:pb-64px lg:px-64px sm:pt-144px sm:pb-64px sm:px-48px">
    <div class="m-auto flex flex-col lg:flex-row max-w-1152px">
      <div class="text-center lg:text-left lg:max-w-592px flex-shrink-0">
        <h1 class="name">
          <span>Guava</span>
        </h1>
        <p class="desc">UI Component</p>
        <div class="actions">
          <a href="/getting-started/installation/">
            <GButton
              client:only="solid-js"
              class="font-bold"
              type="primary"
              style="--button-rounded: 20px;"
            >
              Getting Started
            </GButton>
          </a>
        </div>
      </div>
      <div>
        <div class="image-bg"></div>
      </div>
    </div>
  </div>
</BaseLayout>
